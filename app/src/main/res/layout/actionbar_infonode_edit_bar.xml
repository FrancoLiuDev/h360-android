<?xml version="1.0" encoding="utf-8"?>

<com.leedian.klozr.utils.viewUtils.ActionBarBottom xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_gravity="fill_horizontal"
    android:layout_alignParentBottom="true"
    android:background="@color/colorActionBarBackground">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/btn_toolbar_right_layout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="@string/string_delete"

            android:layout_marginLeft="@dimen/marge_to_layout_side"
            android:layout_centerVertical="true"
            android:background="@color/colorMenuItemBackground"

            android:id="@+id/btn_node_edit_delete" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="visible"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="@string/string_complete"
            android:layout_marginRight="@dimen/marge_to_layout_side"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/colorMenuItemBackground"

            android:id="@+id/btn_node_edit_complete" />


    </RelativeLayout>







</com.leedian.klozr.utils.viewUtils.ActionBarBottom>