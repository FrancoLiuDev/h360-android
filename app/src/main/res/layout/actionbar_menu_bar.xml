<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"

    android:background="@color/colorActionBarBackground">

    <ImageView
        android:layout_width="@dimen/action_bar_image_size"
        android:layout_height="@dimen/action_bar_image_size"


        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/colorMenuItemBackground"
        android:id="@+id/btn_left" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/btn_left"

        android:textColor="@color/colorActionBarTitle"
        android:background="@color/colorMenuItemBackground"
        android:clickable="false"
        android:enabled="false"
        android:id="@+id/textView"
        android:layout_toLeftOf="@+id/btn_right2"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        />


    <ImageView
        android:layout_width="@dimen/action_bar_image_size"
        android:layout_height="@dimen/action_bar_image_size"

        android:layout_centerVertical="true"
        android:background="@color/colorMenuItemBackground"
        android:layout_toLeftOf="@+id/btn_right"
        android:layout_marginRight="10dp"
        android:id="@+id/btn_right2" />

    <ImageView
        android:layout_width="@dimen/action_bar_image_size"
        android:layout_height="@dimen/action_bar_image_size"

        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorMenuItemBackground"
        android:layout_centerVertical="true"
        android:id="@+id/btn_right" />




</RelativeLayout>